@page
@using JobFinderNet.Areas.Identity.Pages.Account.Manage
@model JobFinderNet.Areas.Identity.Pages.Account.Manage.PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="mb-4">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-8">
        <p class="text-muted">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p class="text-muted mb-4">
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        
        <div class="d-flex gap-3">
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="btn btn-primary rounded-3" type="submit">Download</button>
            </form>
            
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger rounded-3">Delete</a>
        </div>
    </div>
</div>