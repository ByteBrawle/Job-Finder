@page
@using JobFinderNet.Areas.Identity.Pages.Account.Manage
@model JobFinderNet.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="mb-4">@ViewData["Title"]</h3>

<form id="profile-form" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    
    <div class="row g-3">
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control rounded-3" />
                <label asp-for="Input.FirstName">First Name</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control rounded-3" />
                <label asp-for="Input.LastName">Last Name</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Username" class="form-control rounded-3" disabled />
        <label asp-for="Username">Username</label>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.PhoneNumber" class="form-control rounded-3" />
        <label asp-for="Input.PhoneNumber">Phone number</label>
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>

    @if (User.IsInRole("Employer"))
    {
        <div class="form-floating mb-3">
            <input asp-for="Input.CompanyName" class="form-control rounded-3" />
            <label asp-for="Input.CompanyName">Company Name</label>
            <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
        </div>
    }

    <button type="submit" class="btn btn-primary rounded-3">Save changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 